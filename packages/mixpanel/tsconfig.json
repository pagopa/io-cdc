{
  "compilerOptions": {
    "target": "ES2020", // output moderno
    "module": "esnext", // supporta import/export + import.meta
    "lib": [
      "ES2020",
      "DOM"
    ], // ambiente browser con API DOM
    "declaration": true, // genera .d.ts per tipi
    "declarationMap": true, // mappe per .d.ts (utile)
    "outDir": "dist", // cartella output
    "strict": true, // tutte le verifiche strette
    "moduleResolution": "node", // risoluzione moduli node-style
    "esModuleInterop": true, // interop con CommonJS
    "skipLibCheck": true, // evita controlli sui .d.ts delle dipendenze
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true, // per bundler come vite
    "noEmit": false // produce output (necessario per build)
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ]
}